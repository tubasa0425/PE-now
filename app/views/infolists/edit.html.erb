<h1>編集画面</h1>
<%= form_with model:@list, url:"/infolists/#{@list.id}", local:true do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= link_to "削除", destroy_infolist_path(@list.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <%= f.submit '保存' %>
<% end %>