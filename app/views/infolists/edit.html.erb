<h3>投稿編集 <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></h3>




<div class="col-sm-12">

	<%= form_with model:@infolist,local:true do |f| %>


<div class="col-sm-6">
<br></br>
<%= attachment_image_tag @infolist, :image, :fill, 400, 400, format: 'jpeg' %>
  <div class="row">
    <!--%= f.label :image, "画像" %>-->
    <br></br>
    <%= f.attachment_field :image, class: "button_custom center-block" %>
  </div>
</div>


<div class="col-sm-6">
	<br>

  <div class="row">
    <h4><%= f.label :title, "投稿タイトル(20字まで)" %></h4>
    <%= f.text_field :title, placeholder:"投稿タイトル" %>
  </div>
<br>
  <div class="row">
    <h4><%= f.label :boby, "投稿本文(140字まで)" %></h4>
    <%= f.text_area :body, placeholder:"投稿本文"%>
  </div>



  <div class="row">
    <%= link_to "削除", destroy_infolist_path(@infolist.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    <%= f.submit '保存' %>
  </div>
<% end %>

		<%= link_to '投稿詳細', infolist_path(@infolist), class: "infolist_#{@infolist.id}" %> |
		<%= link_to '戻る', infolist_path, class: "back" %>
 </div>



</div>
